<!-- Header -->
<h3 class="uk-heading-bullet">Admins</h3>

<!-- Table -->
<table id="table" class="uk-table uk-table-hover uk-table-striped" style="width: 100%;">
	<thead>
		<tr>
			<th>Photo</th>
			<th>ID</th>
			<th>Full Name</th>
			<th>Sex</th>
			<th>Date of Birth</th>
			<th>Address</th>
			<th>Email</th>
		</tr>
	</thead>
</table>

<!-- Create / Edit Modal -->
<div id="modal-create-edit" bg-close="false" uk-modal>
	<div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical uk-width-1-1">
		<div class="uk-width-1-1">
			<form id="form" method action class="uk-form-stacked uk-grid-small" enctype="multipart/form-data" uk-grid>
				<h2 class="uk-modal-title uk-width-1-1"></h2>
				<input name="hidden_id" type="hidden" value>
				<div class="uk-width-1-3@m uk-width-1-2@s uk-width-1-1">
					<label for="firstname" class="uk-form-label">Firstname</label>
					<div class="uk-form-controls">
						<input class="uk-input" type="text" name="firstname" id="firstname" required>
					</div>
				</div>
				<div class="uk-width-1-3@m uk-width-1-2@s uk-width-1-1">
					<label for="lastname" class="uk-form-label">Lastname</label>
					<div class="uk-form-controls">
						<input class="uk-input" type="text" name="lastname" id="lastname" required>
					</div>
				</div>
				<div class="uk-width-1-3@m uk-width-1-2@s uk-width-1-1">
					<label for="patronymic" class="uk-form-label">Patronymic</label>
					<div class="uk-form-controls">
						<input class="uk-input" type="text" name="patronymic" id="patronymic" required>
					</div>
				</div>
				<div class="uk-width-1-3@m uk-width-1-2@s uk-width-1-1">
					<label for="date_of_birth" class="uk-form-label">Date of birth</label>
					<div class="uk-form-controls">
						<input style="cursor: pointer;" class="uk-input" type="text" name="date_of_birth" id="date_of_birth" readonly="readonly" required>
					</div>
				</div>
				<div class="uk-width-1-3@m uk-width-1-2@s uk-width-1-1">
					<label for="sex" class="uk-form-label">Sex</label>
					<div class="uk-form-controls">
						<select class="uk-select" name="sex" id="sex">
							<option value="male">Male</option>
							<option value="female">Female</option>
							<option value="other">Other</option>
						</select>
					</div>
				</div>
				<div class="uk-width-1-3@m uk-width-1-2@s uk-width-1-1">
					<label for="address" class="uk-form-label">Address</label>
					<div class="uk-form-controls">
						<input class="uk-input" type="text" name="address" id="address" required>
					</div>
				</div>
				<div class="uk-width-1-3@m uk-width-1-2@s uk-width-1-1">
					<label for="email" class="uk-form-label">Email</label>
					<div class="uk-form-controls">
						<input class="uk-input" type="email" name="email" id="email" required>
					</div>
				</div>
				<div class="uk-width-1-3@m uk-width-1-2@s uk-width-1-1">
					<label for="password" class="uk-form-label">Password</label>
					<div class="uk-form-controls">
						<input class="uk-input" type="password" name="password" id="password">
					</div>
				</div>
				<div class="uk-width-1-3@m uk-width-1-2@s uk-width-1-1">
					<label for="image" class="uk-form-label">Image</label>
					<div uk-form-custom="target: true" class="uk-margin-remove uk-width-1-1">
						<input type="file" name="image" id="image">
						<input class="uk-input" type="text" disabled>
					</div>
				</div>
				<div class="uk-width-1-1 uk-margin-top uk-text-right">
					<button class="uk-button uk-button-default uk-modal-close" type="button">Close</button>
					<div class="spinner" style="display: none;">
						<span class="uk-label uk-margin-right">Processing...</span>
						<div uk-spinner></div>
					</div>
					<input type="submit" class="uk-margin-left uk-button uk-button-primary" value="Save">
				</div>
			</form>
		</div>
	</div>
</div>

<!-- Delete Modal -->
<div id="modal-delete" bg-close="false" uk-modal>
	<div class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical">
		<form method="delete" action class="uk-width-1-1">
			<h2 class="uk-modal-title">Are you sure you want to delete this admin?</h2>
			<input name="id" type="hidden" value>
			<div class="uk-margin-top uk-text-right">
				<button class="uk-button uk-button-default uk-modal-close" type="button">Close</button>
				<div class="spinner" style="display: none;">
					<span class="uk-label uk-margin-right">Processing...</span>
					<div uk-spinner></div>
				</div>
				<input type="submit" class="uk-margin-left uk-button uk-button-primary" value="Delete">
			</div>
		</form>
	</div>
</div>

<!-- Scripts -->
<script>
	$("#date_of_birth").datepicker({
		container: '#form',
		dateFormat: 'yy-mm-dd',
		changeMonth: true,
		changeYear: true,
		yearRange: "1930:2020",
		defaultDate: '2000-01-01'
	});
	function showSpinner(modal, show) {
		modal.find(".spinner").toggle(!!show);
		modal.find(".uk-modal-close").toggle(!show);
		modal.find("input[type='submit']").toggle(!show);
	}
	$(document).ready(function () {
		var table = $('#table').DataTable({
			dom: 'Bfrtip',
			responsive: {
				details: {
					display: $.fn.dataTable.Responsive.display.childRowImmediate
				}
			},
			buttons: [
				{
					text: 'New',
					action: function (e, dt) {
						$('#modal-create-edit form')[0].reset();
						$('#modal-create-edit form').find(':input').not(':submit, select').removeAttr('value');
						$('#modal-create-edit form').find('textarea').html(null);
						$("#modal-create-edit form").attr("action", "#");
						$("#modal-create-edit form").attr("method", "post");
						$("#modal-create-edit .uk-modal-title").html("New admin");
						showSpinner($("#modal-create-edit"), false);
						UIkit.modal("#modal-create-edit").show();
					}
				},
				{
					extend: 'selectedSingle',
					text: 'Edit',
					action: function (e, dt) {
						var data = dt.rows({ selected: true }).data();
						if (data.length != 1) return;
						var row = data[0];
						$('#modal-create-edit form')[0].reset();
						$('#modal-create-edit form').find(':input').not(':submit, select').removeAttr('value');
						$('#modal-create-edit form').find('textarea').html(null);
						$("#modal-create-edit form").attr("action", row.id);
						$("#modal-create-edit form").attr("method", "put");
						$("#modal-create-edit input[name='hidden_id']").attr("value", row.id);
						$("#modal-create-edit input[name='firstname']").attr("value", row.firstname);
						$("#modal-create-edit input[name='lastname']").attr("value", row.lastname);
						$("#modal-create-edit input[name='patronymic']").attr("value", row.patronymic);
						$("#modal-create-edit input[name='date_of_birth']").attr("value", row.date_of_birth);
						$("#modal-create-edit input[name='address']").attr("value", row.address);
						$("#modal-create-edit input[name='email']").attr("value", row.email);
						$("#modal-create-edit select[name='sex']").val(row.sex).change();
						$("#modal-create-edit .uk-modal-title").html("Edit admin");
						showSpinner($("#modal-create-edit"), false);
						UIkit.modal("#modal-create-edit").show();
					}
				},
				{
					extend: 'selectedSingle',
					text: 'Delete',
					action: function (e, dt) {
						var data = dt.rows({ selected: true }).data();
						if (data.length != 1) return;
						var row = data[0];
						$('#modal-delete form')[0].reset();
						$("#modal-delete form").attr("action", row.id);
						$("#modal-delete input[name='id']").attr("value", row.id);
						showSpinner($("#modal-delete"), false);
						UIkit.modal("#modal-delete").show();
					}
				},
				'copyHtml5', 'excelHtml5', 'csvHtml5', 'pdfHtml5', 'colvis'
			],
			select: { style: 'multi' },
			ajax: "all",
			rowId: 'id',
			columns: [
				{
					"data": null,
					render: function (data, type, row) {
						return "<img class='user-thumb' src='/uploads/images/" + row.image_path + "'>";
					}
				},
				{
					"data": null,
					render: function (data, type, row) {
						return ('000000000' + row.id).substr(-8);
					}
				},
				{
					"data": null,
					render: function (data, type, row) {
						return row.firstname + " " + row.lastname + " " + row.patronymic;
					}
				},
				{ "data": "sex" },
				{ "data": "date_of_birth" },
				{ "data": "address" },
				{ "data": "email" }
			]
		});
		$("#modal-create-edit form").submit(function (e) {
			e.preventDefault();
			showSpinner($("#modal-create-edit"), true);
			$.ajax({
				type: $(this).attr('method'),
				processData: false,
				contentType: false,
				cache: false,
				url: $(this).attr('action'),
				data: new FormData($(this)[0]),
				success: function (data) {
					let id = $("#modal-create-edit input[name='hidden_id']").val();
					if (id) {
						table.row("#" + id).data(data).draw();
					} else {
						table.row.add(data).draw();
					}
					UIkit.modal("#modal-create-edit").hide();
				},
				error: function (data) {
					UIkit.notification({
						message: data.responseText,
						status: 'danger',
						timeout: 1000
					});
					showSpinner($("#modal-create-edit"), false);
				}
			});
		});
		$("#modal-delete form").submit(function (e) {
			e.preventDefault();
			showSpinner($("#modal-delete"), true);
			$.ajax({
				type: $(this).attr('method'),
				url: $(this).attr('action'),
				data: $(this).serialize(),
				success: function (data) {
					let id = $("#modal-delete input[name='id']").val();
					table.row("#" + id).remove().draw();
					UIkit.modal("#modal-delete").hide();
				},
				error: function (data) {
					UIkit.notification({
						message: data.responseText,
						status: 'danger',
						timeout: 1000
					});
					showSpinner($("#modal-delete"), false);
				}
			});
		});
	});
</script>