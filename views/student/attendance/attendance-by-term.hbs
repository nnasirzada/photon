<h3 class="uk-heading-bullet uk-margin-top">
    {{title}}
</h3>

<div uk-grid>
    {{!-- Class Navigation --}}
    <div class="uk-width-1-1">
        <table id="table" class="uk-table uk-table-hover uk-table-striped" style="width: 100%;">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Section</th>
                    <th>Schedule</th>
                    <th>Time</th>
                    <th>Missed</th>
                    <th>Percentage</th>
                </tr>
            </thead>
        </table>
    </div>
</div>


<div id="attendance-details" class="uk-flex-top" uk-modal>
    <div id="attendance-modal" class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical uk-width-auto">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-modal-header">
            <h6 id="course_name" class="uk-modal-title">Course Name:</h6>
        </div>
        <div class="uk-modal-body">
            <p id="total_classes">Total classes: </p>
            <p id="present">Present: </p>
            <p id="absent">Absent: </p>
        </div>
        <div class="uk-modal-footer">

        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        var table = $('#table').DataTable({
            dom: 'Bfrtip',
            responsive: {
                details: {
                    display: $.fn.dataTable.Responsive.display.childRowImmediate
                }
            },
            buttons: [],
            select: {},
            ajax: "/student/attendance/term/{{term_id_ajax}}/all",
            rowId: 'id',
            columns: [
                { "data": "title", responsivePriority: 1 },
                { "data": "section", responsivePriority: 4 },
                { "data": "schedule", responsivePriority: 5 },
                { "data": "time", responsivePriority: 6 },
                { "data": "missed", responsivePriority: 2 },
                { "data": "percentage", responsivePriority: 3 }
            ]
        });

        // table row onclick
        $('#table tbody').css("cursor", "pointer");
        $('#table tbody').on('click', 'tr', function () {
            var row = table.row($(this));
            $('#course_name').text(row.data().name);
            $('#total_classes').text('Total classes: ' + row.data().total_classes);
            $('#present').text('Present: ' + (parseInt(row.data().total_classes) - parseInt(row.data().missed)).toString());
            $('#absent').text('Absent: ' + row.data().missed);


            UIkit.modal("#attendance-details").show();
        });

    });
</script>