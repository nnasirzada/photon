<h3 class="uk-heading-bullet uk-margin-top">
    {{title}}
</h3>

<div uk-grid>
    {{!-- Class Navigation --}}
    <div class="uk-width-1-1">
        <table id="table" class="uk-table uk-table-hover uk-table-striped" style="width: 100%;">
            <thead>
            <tr>
                <th>Title</th>
                <th>Section</th>
                <th>Schedule</th>
                <th>Time</th>
                <th>Missed</th>
                <th>Total</th>
                <th>Percentage</th>
            </tr>
            </thead>
        </table>
    </div>
</div>


<div id="attendance-details" class="uk-flex-top" uk-modal>
    <div id="attendance-modal" class="uk-modal-dialog uk-modal-body uk-margin-auto-vertical uk-width-auto">
        <div class="uk-modal-header">
            <h5 id="course_name" class="uk-modal-title"></h5>
        </div>
        <div class="uk-modal-body">
            <h3>Attendance Details</h3>
            <p id="mr"></p>
            <p id="mp"></p>
            <p id="ma"></p>
            <p id="ad"></p>
        </div>
        <button class="uk-modal-close-default" type="button" uk-close></button>
    </div>
</div>

<script>
    $(document).ready(function () {
        var table = $('#table').DataTable({
            dom: 'Bfrtip',
            responsive: {
                details: {
                    display: $.fn.dataTable.Responsive.display.childRowImmediate
                }
            },
            buttons: [],
            select: {},
            ajax: "/student/attendance/term/{{term_id_ajax}}/all",
            rowId: 'id',
            columns: [
                {"data": "title", responsivePriority: 1},
                {"data": "section", responsivePriority: 5},
                {"data": "schedule", responsivePriority: 6},
                {"data": "time", responsivePriority: 7},
                {"data": "missed", responsivePriority: 2},
                {"data": "total_classes", responsivePriority: 3},
                {"data": "percentage", responsivePriority: 4}
            ]
        });

        // table row onclick
        $('#table tbody').css("cursor", "pointer");
        $('#table tbody').on('click', 'tr', function () {
            var row = table.row($(this));
            $('#course_name').text(row.data().title);
            $('#mr').html('<span class="uk-text-bold">Total Classes:</span> ' + row.data().total_classes);
            $('#mp').html('<span class="uk-text-bold">Presents:</span> ' + (parseInt(row.data().total_classes) - parseInt(row.data().missed)).toString());
            $('#ma').html('<span class="uk-text-bold">Absents:</span> ' + row.data().missed);
            $('#ad').html('<span class="uk-text-bold">Absent Dates:</span> ' + row.data().dates);
            UIkit.modal("#attendance-details").show();
        });

    });
</script>