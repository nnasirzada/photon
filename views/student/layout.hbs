<!DOCTYPE html>
<html>

<head>
    <title>{{title}} - Photon</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/assets/styles/style.css" />
    {{#if imports.jquery}}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    {{/if}}
    {{#if imports.jquery_ui}}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css" />
    {{/if}}
    {{#if imports.uikit}}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.40/js/uikit.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.40/css/uikit.min.css" />
    {{/if}}
    {{#if imports.uikit_icons}}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.0-beta.40/js/uikit-icons.min.js"></script>
    {{/if}}
    {{#if imports.data_tables}}
        <script type="text/javascript" src="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.10.16/b-1.5.1/b-colvis-1.5.1/b-html5-1.5.1/b-print-1.5.1/cr-1.4.1/fc-3.2.4/fh-3.1.3/r-2.2.1/rr-1.2.3/sl-1.2.5/datatables.min.js"></script>
        <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/jszip-2.5.0/dt-1.10.16/b-1.5.1/b-colvis-1.5.1/b-html5-1.5.1/b-print-1.5.1/cr-1.4.1/fc-3.2.4/fh-3.1.3/r-2.2.1/rr-1.2.3/sl-1.2.5/datatables.min.css" />
    {{/if}}
    {{#if imports.moment}}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.21.0/moment.min.js"></script>
    {{/if}}
    {{#if imports.full_calendar}}
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.print.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.9.0/fullcalendar.min.js"></script>
    {{/if}}
</head>

<body>

    {{!-- Drawer (Sidebar) --}}
    <div id="offcanvas-nav" uk-offcanvas="overlay: true" class="uk-dark" uk-offcanvas>
        <div class="uk-offcanvas-bar">
            <ul class="uk-nav uk-nav-default uk-nav-parent-icon" uk-nav>
                <li {{#if active.profile}} class="uk-active" {{/if}}>
                    <a href="/student/profile">Profile</a>
                </li>
                <li class="uk-nav-divider"></li>
                <li {{#if active.schedule}} class="uk-active" {{/if}}>
                    <a href="/student/schedule/">Schedule</a>
                </li>
                <li class="uk-nav-divider"></li>
                <li {{#if active.terms}} class="uk-active" {{/if}}>
                    <a href="/student/terms/">Terms</a>
                </li>
                <li class="uk-nav-divider"></li>
                <li {{#if active.registration}} class="uk-active" {{/if}}>
                    <a href="/student/registration">Registration</a>
                </li>
                <li class="uk-nav-divider"></li>
                <li>
                    <a href="/auth/logout">Logout</a>
                </li>
            </ul>
        </div>
    </div>

    {{!-- Horizontal Navbar --}}
    <nav id="navbar" class="uk-navbar-container" uk-sticky="bottom: #offset" uk-navbar>
        <div class="uk-navbar-left">
            <a href="/" class="uk-navbar-item uk-logo">
                <img src="/assets/images/university_logo.png">
            </a>
        </div>
        <div class="uk-navbar-right">
            <ul class="uk-navbar-nav">
                <li class="uk-visible@m {{#if active.profile}} uk-active {{/if}}">
                    <a href="/student/profile/">Profile</a>
                </li>
                <li class="uk-visible@m">
                    <a href="/auth/logout/">Logout</a>
                </li>
            </ul>
            <button class="uk-navbar-toggle uk-hidden@m" uk-toggle="target: #offcanvas-nav" uk-navbar-toggle-icon></button>
        </div>
    </nav>

    {{!-- Sticky Sidebar --}}
    <div id="oncanvas-nav" class="uk-visible@m uk-light">
        <ul class="uk-nav uk-nav-default uk-nav-parent-icon" uk-nav>
            <li {{#if active.schedule}} class="uk-active" {{/if}}>
                <a href="/student/schedule/">Schedule</a>
            </li>
            <li class="uk-nav-divider"></li>
            <li {{#if active.terms}} class="uk-active" {{/if}}>
                <a href="/student/terms/">Terms</a>
            </li>
            <li class="uk-nav-divider"></li>
            <li {{#if active.registration}} class="uk-active" {{/if}}>
                <a href="/student/registration">Registration</a>
            </li>
        </ul>
    </div>

    <div id="body">
        {{{body}}}
    </div>

    <script>
        function showOffcanvasNav() {
            UIkit.offcanvas('#offcanvas-nav').show();
        }
    </script>

</body>

</html>