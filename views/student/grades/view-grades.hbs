<h3 class="uk-heading-bullet uk-margin-top">
    {{title}}
</h3>

<div uk-grid>
    {{!-- Class Navigation --}}
    <div class="uk-width-1-1">
        <table id="table" class="uk-table uk-table-hover uk-table-striped" style="width: 100%;">
            <thead>
            <tr>
                <th>Title</th>
                <th>Score/Out of</th>
                <th>Percentage</th>
                <th>Letter Grade</th>
                <th>Weight</th>
            </tr>
            </thead>
        </table>
    </div>
</div>

<script>
    $(document).ready(function () {
        var table = $('#table').DataTable({
            dom: 'Bfrtip',
            responsive: {
                details: {
                    display: $.fn.dataTable.Responsive.display.childRowImmediate
                }
            },
            buttons: [],
            select: {},
            ajax: "/student/grades/term/{{term_id_ajax}}/class/{{class_id_ajax}}/grades",
            rowId: 'id',
            columns: [
                {"data": "title", responsivePriority: 1},
                {"data": "score_outof", responsivePriority: 2},
                {"data": "percentage", responsivePriority: 5},
                {"data": "letter_grade", responsivePriority: 3},
                {"data": "weight", responsivePriority: 4}
            ]
        });

    });
</script>