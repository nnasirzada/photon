{{#if classDetailsFound}}
    <h3 class="uk-heading-bullet">{{classDetails.subject_code}} {{classDetails.course_number}}
        - {{classDetails.course_name}}, Section {{classDetails.section}}</h3>

    <div uk-grid>
        <div class="uk-width-2-3@l">
            <div class="uk-card uk-card-small uk-card-default uk-card-body custom-card-border">
                <h3>Class Details</h3>
                <p>
                    <span class="uk-text-bold">Description:</span> {{classDetails.course_description}}
                </p>
                <p class="uk-margin-remove-bottom">
                    <span class="uk-text-bold">Subject:</span> {{classDetails.subject_name}}
                </p>
                <p class="uk-margin-remove">
                    <span class="uk-text-bold">School:</span> {{classDetails.school_name}}
                </p>
                <p class="uk-margin-remove">
                    <span class="uk-text-bold">Term:</span> {{classDetails.term_name}}
                </p>
                <p class="uk-margin-remove">
                    <span class="uk-text-bold">Grade Mode:</span> {{classDetails.grade_mode_name}}
                </p>
                <p class="uk-margin-remove-top">
                    <span class="uk-text-bold">Schedule Type:</span> {{classDetails.schedule_type_name}}
                </p>
                <p class="uk-margin-remove">
                    <span class="uk-text-bold">Start Date:</span> {{classDetails.start_date}}
                </p>
                <p class="uk-margin-remove">
                    <span class="uk-text-bold">End Date:</span> {{classDetails.end_date}}
                </p>
            </div>
            {{#if classMeetingsFound}}
                <div class="uk-margin-top uk-card uk-card-small uk-card-default uk-card-body custom-card-border">
                    <h3 class="uk-margin-remove-bottom">Class Meetings</h3>
                    {{#each classMeetings}}
                        <div class="uk-margin-top">
                            <p class="uk-margin-remove">
								<span class="uk-text-bold">
									Time:
								</span>
                                {{#if this.monday}} Monday{{/if}}
                                {{#if this.tuesday}} Tuesday{{/if}}
                                {{#if this.wednesday}} Wednesday{{/if}}
                                {{#if this.thursday}} Thursday{{/if}}
                                {{#if this.friday}} Friday{{/if}}
                                {{#if this.saturday}} Saturday{{/if}}
                                {{#if this.sunday}} Sunday{{/if}}
                                , {{this.start_time}} - {{this.end_time}}
                            </p>
                            <p class="uk-margin-remove">
								<span class="uk-text-bold">
									Building:
								</span>
                                {{this.building_code}} - {{this.building_name}}
                            </p>
                            <p class="uk-margin-remove">
								<span class="uk-text-bold">
									Room:
								</span>
                                {{this.room_code}} - {{this.room_name}}
                            </p>
                        </div>
                    {{/each}}
                </div>
            {{else}}
                <div class="uk-alert-danger" uk-alert>
                    <p>There is no meeting time available for this class.</p>
                </div>
            {{/if}}
        </div>
        {{!-- Right Column - Class Navigation --}}
        <div class="uk-width-1-3@l">
            <div class="custom-card-border uk-card uk-card-small uk-card-body uk-card-default">
                <ul class="uk-nav-default uk-nav-parent-icon" uk-nav>
                    <li class="uk-nav-header uk-margin-bottom">Class Navigation</li>
                    <li>
                        <a href="/student/grades/term/{{classDetails.term_id}}/class/{{classDetails.class_id}}/view_grades">View
                            Grades</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{{else}}
    <div class="uk-alert-danger" uk-alert>
        <p>There is no information available for this class.</p>
    </div>
{{/if}}